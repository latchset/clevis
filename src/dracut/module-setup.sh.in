depends() {
    echo crypt systemd network
    return 0
}

install() {
    local ret=0

    inst_multiple /etc/services \
        clevis-decrypt-http \
        clevis-decrypt-tang \
        clevis-decrypt-sss \
        @libexecdir@/clevis-luks-askpass \
        clevis-decrypt \
        luksmeta \
        clevis \
        mktemp \
        curl \
        jose \
        nc \
        grep

    for cmd in clevis-decrypt-tpm2 \
	tpm2_createprimary \
	tpm2_unseal \
	tpm2_load; do

	if ! find_binary "$cmd" &>/dev/null; then
	    ((ret++))
	fi
    done

    if (($ret == 0)); then
	inst_multiple clevis-decrypt-tpm2 \
	    tpm2_createprimary \
	    tpm2_unseal \
	    tpm2_load
    fi
    
    unitdir="${initdir}${systemdsystemunitdir}"
    mkdir -p "${unitdir}/clevis-luks-askpass.path.d" \
	     "${unitdir}/clevis-luks-askpass.service.d"
    for f in path service; do
        cat > "${unitdir}/clevis-luks-askpass.${f}.d/00-dracut.conf" <<EOF
[Unit]
DefaultDependencies=no
Conflicts=shutdown.target
Before=basic.target shutdown.target network-online.target
EOF
    done

    # Remove all dependencies etc from original files.
    sed -i '/^[Before|Conflicts|Requires|After|Wants].*/d' \
        "${unitdir}/clevis-luks-askpass.service" \
	"${unitdir}/clevis-luks-askpass.path"

    ln_r "${systemdsystemunitdir}/clevis-luks-askpass.path" \
         "${systemdsystemunitdir}/sysinit.target.wants"

    dracut_need_initqueue
}

installkernel() {
    hostonly='' instmods =drivers/char/tpm
}
