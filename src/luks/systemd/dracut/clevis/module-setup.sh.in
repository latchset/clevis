depends() {
    echo crypt systemd
    return 255
}

install() {
    inst_multiple \
        "$systemdsystemunitdir/clevis-luks-askpass.path" \
        "$systemdsystemunitdir/clevis-luks-askpass.service" \
        /etc/services \
        @libexecdir@/clevis-luks-askpass \
        clevis-decrypt \
        cryptsetup \
        luksmeta \
        clevis \
        mktemp \
        jose \
        ncat

    systemctl -q --root "$initdir" add-wants sysinit.target clevis-luks-askpass.path
}
